{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": "src",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["build", "node_modules"]
}
